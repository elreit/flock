<div class="container" class="tab-content" align="center">

  <div class="tab-pane fade in show active" id="meeting-point">
    <% if current_user.name == @my_buddy.name %>
      <h4>You will meet <%= @requester.name %>...</h4>
    <% else %>
      <h4>You will meet <%= @my_buddy.name %>...</h4>
    <% end %>
    <h4 class="text-center">Show your pin: <%= @walk.pin %></h4>
    <h4 class="btn text-center" id="tab-dashboard"><%= link_to "Let's flock!ðŸ•Š", routes_walk_path(@walk), :style => "color: white;" %></h4>

    <div id="routemap"
     style="width: 380px; height: 400px;position: sticky;top:0px"
     data-meet-lng="<%= @meet_point_lng %>"
     data-meet-lat="<%= @meet_point_lat %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
     </div>


    <div id="instructions" style="width: 380px;"></div>
    </div>

  <div class="tab-pane fade" id="messaging">
    <%= link_to 'Chat', chatroom_path(@walk.chatroom) %>
  </div>
</div>

<div class="dashboard-tabs">
  <ul class="nav nav-pills justify-content-center" style="position: sticky; bottom: 0px">
    <li class="nav-item">
      <a class="nav-link active" data-toggle="tab" href="#meeting-point">
        <img class="icon-marker" src="https://i.imgur.com/xtCh3Pk.png" title="source: imgur.com">
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#messaging">
        <img class="icon-letter" src="https://i.imgur.com/jAw3Wrn.png" title="source: imgur.com">
        <span class="badge">3</span>
      </a>
    </li>
  </ul>
</div>
