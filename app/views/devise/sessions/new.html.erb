<div>
  <img src="https://i.imgur.com/B5OROzC.jpg" alt="flock logo">
</div>
<div class="login" style="display: flex; justify-content: center; margin-top: 220px;">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="login" style="color: #fff; width: 300px; font-size: 18px;">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-block", style:"align-items: center; background: #FD5C65; color: #fff; padding-top: 12px; padding-bottom: 12px; margin-top:10px;" %>
        </div>
      </div>
    <% end %>
</div>

      <%= render "devise/shared/links" %>

