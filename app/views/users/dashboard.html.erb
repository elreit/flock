<div class="container" style="margin-top: 10px;">

  <h3 align="center">Dashboard</h3>
</div>

<div class="container" class="tab-content" align="center">

  <div class="tab-pane fade in show active" id="request">
    <p>This tab show all of my requests</p>
    <p>Buddy: <%= @my_buddy.name %></p>
    <p>Meeting point: <%= @my_walk_request.meeting_point %></p>
    <p>Request status: <%= @my_walk_request.walk_request_status %></p>
  </div>

  <div class="tab-pane fade" id="incoming">
    <p>This tab show all of requests sent to me</p>
    <p>Requester: <%= @requester.name %> </p>
    <p>Meeting point: <%= @walk_request_received.meeting_point %></p>
    <% if @walk_request_received.walk_request_status == "Pending" %>
      <p class="button"><%= link_to 'Accept', walk_path(@walk_request_received, format: 'Confirmed'), method: 'PATCH' %></p>
      <p class="button"><%= link_to 'Decline', walk_path(@walk_request_received, format: 'Declined'), method: 'PATCH' %></p>
    <% else %>
      <p><%= @walk_request_received.walk_request_status %></p>
      <p class="button"><%= link_to 'Cancel', walk_path(@walk_request_received, format: 'Declined'), method: 'PATCH' %></p>
    <% end %>
  </div>

  <div>
    <ul class="nav nav-pills justify-content-center" style="margin: 30px 150px 30px 150px;">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#request">Request</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#incoming">Incoming</a>
      </li>
    </ul>
  </div>
</div>
